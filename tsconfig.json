{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@hooks*": ["src/hooks*"],
      "@features*": ["src/features*"],
      "@config*": ["tamagui.config.ts"],
      "@type*": ["src/types*"],
      "@component*": ["src/components*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
